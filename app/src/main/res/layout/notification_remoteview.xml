<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_8">

    <ImageView
        android:id="@+id/remote_icon"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_notification" />

    <TextView
        android:id="@+id/remote_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/remote_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/sp_14"
        tools:text="SI 개발자의 ‘험난하지만 즐거운’ 스타트업 적응기" />

    <TextView
        android:id="@+id/remote_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_icon"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="@dimen/sp_12"
        tools:text="‘남의 서비스’가 아닌, ‘내 서비스’,  ‘우리 서비스’를 개발하고 싶다면? 장애가 나고 서버가 터져 고생해도, 끈끈한 전우애와 사용자들의 피드백으로 보람 &amp; 만족감을 얻는 서비스 회사에 대한 로망이 있다면?" />

    <ImageView
        android:id="@+id/remote_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remote_message" />
</RelativeLayout>
